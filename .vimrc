" Don't try to be vi compatible
set nocompatible

syntax enable

set number

filetype plugin indent on

" Show file stats
set ruler

" show existing tab with 2 spaces width
set tabstop=2

" when indenting with '>', use 2 spaces width
set shiftwidth=2

" On pressing tab, insert 2 spaces
set expandtab

" Status bar
set laststatus=2

" Last Line
set showmode
set showcmd
